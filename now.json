{
    "version": 2,
    "name": "lightray",
    "builds": [
        { "src": "src/index.ts", "use": "@now/node@canary" },
        { "src": "*.html", "use": "@now/static" },
        { "src": "*.json", "use": "@now/static" },
        { "src": "static/**", "use": "@now/static" }
    ],
    "routes": [
        { "src": "^/api/(.*)", "dest": "/src/index.ts" },
	{ "src": "^/", "dest": "/index.html" },
	{ "src": "^/event", "dest": "/event.html" },
	{ "src": "^/static/(.+)", "dest": "/static/$1" },
	{ "src": "^/(.*)", "dest": "/index.html" },
    ],

}
